# Notion OAuth Configuration
NOTION_CLIENT_ID=your_notion_client_id
NOTION_CLIENT_SECRET=your_notion_client_secret

# Redirect URI - IMPORTANTE: Use o mesmo domínio que você está chamando no iOS!
# Opção 1 (Vercel domain - recomendado para começar):
NOTION_REDIRECT_URI=https://gastandoya-api.vercel.app/api/notion/oauth/callback
# Opção 2 (Custom domain - após configurar DNS):
# NOTION_REDIRECT_URI=https://api.gastandoya.com.br/api/notion/oauth/callback

NOTION_API_VERSION=2022-06-28

# App API Security
APP_API_KEY=your_secure_random_string_for_app_ios

# Base URL - IMPORTANTE: Mesmo domínio do NOTION_REDIRECT_URI!
# Opção 1 (Vercel domain):
NEXT_PUBLIC_BASE_URL=https://gastandoya-api.vercel.app
# Opção 2 (Custom domain):
# NEXT_PUBLIC_BASE_URL=https://api.gastandoya.com.br

# Redis Configuration (Persistent Storage)
# Opção 1: Redis externo (Redis Labs, Upstash, etc)
REDIS_URL=redis://default:password@host:port
# Opção 2: Vercel KV (configurado automaticamente no dashboard da Vercel)
# KV_REST_API_URL=https://...
# KV_REST_API_TOKEN=...
# Opção 3: Forçar in-memory (desenvolvimento local)
# FORCE_IN_MEMORY_STORE=true
